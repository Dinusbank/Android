<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.splash.SplashFragment3">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="68dp"
        android:layout_height="31dp"
        android:layout_gravity="end"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/small_logo"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="@dimen/sixteen_dp"
        android:contentDescription="@string/search_box"
        android:scaleType="centerCrop"
        android:src="@drawable/searchbar_guidescreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="340dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="47dp"
        android:contentDescription="@string/guide_picture"
        android:scaleType="centerCrop"
        android:src="@drawable/vector_guidescreen_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="@string/text_starter"
        android:textColor="@color/font_color"
        android:textSize="18sp"
        android:maxLines="3"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginEnd="@dimen/sixteen_dp"
        android:layout_marginTop="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginEnd="@dimen/sixteen_dp"
        android:layout_marginBottom="@dimen/fifty_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="67dp"
            android:layout_height="@dimen/sixteen_dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="43dp"
            android:contentDescription="@string/progress_icon"
            android:src="@drawable/progress_icon_2" />

        <ImageView
            android:id="@+id/btn_next2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="31dp"
            android:contentDescription="@string/next_button"
            android:scaleType="centerCrop"
            android:src="@drawable/nextbutton_guidescreen" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>